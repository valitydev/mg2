[
    {elvis, [
        {verbose, true},
        {config, [
            #{
                dirs => ["apps/*/src"],
                filter => "*.erl",
                ruleset => erl_files,
                rules => [
                    %% NOTE Maybe uncomment lines below
                    %% % Too opionated
                    %% {elvis_style, state_record_and_type, disable},
                    %% {elvis_style, no_if_expression, disable},
                    %% {elvis_style, no_nested_try_catch, disable},

                    %% {elvis_style, nesting_level, #{level => 3}},
                    %% {elvis_style, function_naming_convention, #{regex => "^([a-z][a-z0-9]*_?)*$"}},
                    %% {elvis_style, no_if_expression, disable},

                    {elvis_style, no_if_expression, #{
                        ignore => [
                            mg_core_dirange
                        ]
                    }},
                    {elvis_style, state_record_and_type, #{
                        ignore => [
                            mg_core_gen_squad,
                            mg_core_gen_squad_heart,
                            mg_core_storage_memory,
                            mg_core_union,
                            mg_core_worker
                        ]
                    }},
                    {elvis_style, no_nested_try_catch, #{
                        ignore => [
                            mg_core_machine
                        ]
                    }},
                    % Too broad
                    {elvis_style, invalid_dynamic_call, #{
                        ignore => [
                            % Working with generic registries.
                            mg_core_utils
                        ]
                    }},

                    % In line with erlfmt settings.
                    {elvis_text_style, line_length, #{limit => 120}},
                    % Was too strict.
                    {elvis_style, dont_repeat_yourself, #{min_complexity => 20}},
                    {elvis_style, god_modules, #{
                        limit => 30,
                        ignore => [
                            % Provides a bunch of simple and easy to understand utilities for the configurator.
                            machinegun_configuration_utils
                        ]
                    }}
                ]
            },
            #{
                dirs => ["apps/*/test"],
                filter => "*.erl",
                ruleset => erl_files,
                rules => [
                    %% NOTE Maybe uncomment lines below
                    %% {elvis_style, invalid_dynamic_call, disable},
                    %% {elvis_style, state_record_and_type, disable},
                    %% % Assert macros can trigger use of ignored binding, yet we want them for better
                    %% % readability.
                    %% {elvis_style, used_ignored_variable, disable},

                    %% {elvis_style, nesting_level, #{level => 3}},
                    %% {elvis_style, function_naming_convention, #{regex => "^([a-z][a-z0-9]*_?)*$"}},
                    %% {elvis_style, no_if_expression, disable},

                    {elvis_style, state_record_and_type, #{ignore => [ct_proxy]}},
                    {elvis_style, invalid_dynamic_call, #{
                        ignore => [
                            ct_proxy_protocol
                        ]
                    }},
                    {elvis_style, used_ignored_variable, #{
                        ignore => [
                            mg_core_events_sink_kafka_errors_SUITE,
                            mg_core_workers_SUITE
                        ]
                    }},

                    % In line with erlfmt settings.
                    {elvis_text_style, line_length, #{limit => 120}},
                    % We want to use `ct:pal/2` and friends in test code.
                    {elvis_style, no_debug_call, disable},
                    % Tests are usually more comprehensible when a bit more verbose.
                    {elvis_style, dont_repeat_yourself, #{min_complexity => 20}},
                    {elvis_style, god_modules, #{
                        ignore => [machinegun_prometheus_metric_SUITE, mg_tests_SUITE]
                    }}
                ]
            },
            #{
                dirs => [".", "apps/*"],
                filter => "rebar.config",
                rules => [
                    {elvis_text_style, line_length, #{limit => 120}},
                    {elvis_text_style, no_tabs},
                    {elvis_text_style, no_trailing_whitespace}
                ]
            },
            #{
                dirs => ["apps/*/src"],
                filter => "*.app.src",
                rules => [
                    {elvis_text_style, line_length, #{limit => 120}},
                    {elvis_text_style, no_tabs},
                    {elvis_text_style, no_trailing_whitespace}
                ]
            },
            #{
                dirs => ["."],
                filter => "elvis.config",
                ruleset => elvis_config
            },
            #{
                dirs => ["."],
                filter => "Makefile",
                ruleset => makefiles
            }
        ]}
    ]}
].
