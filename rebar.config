%% Common project erlang options.
{erl_opts, [
    % mandatory
    debug_info,
    warnings_as_errors,
    warn_export_all,
    warn_missing_spec,
    warn_untyped_record,
    warn_export_vars,

    % by default
    warn_unused_record,
    warn_bif_clash,
    warn_obsolete_guard,
    warn_unused_vars,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_deprecated_function,

    % at will
    % bin_opt_info
    % no_auto_import,
    warn_missing_spec_all
]}.

%% XRef checks
{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    deprecated_functions_calls,
    deprecated_functions
]}.
% at will2
% {xref_warnings, true}.

{deps, [
    {genlib, {git, "https://github.com/valitydev/genlib", {branch, master}}},
    % for configurator script
    {yamerl, {git, "https://github.com/rbkmoney/yamerl", {branch, master}}},
    {cg_mon, {git, "https://github.com/rbkmoney/cg_mon", {branch, master}}}
]}.

%% Rebar profiles
{profiles, [
    {prod, [
        {deps, [
            {logger_logstash_formatter,
                {git, "https://github.com/valitydev/logger_logstash_formatter.git", {ref, "08a66a6"}}},
            % for introspection on production
            {recon, "2.5.2"},
            {iosetopts, {git, "https://github.com/valitydev/iosetopts.git", {ref, "edb445c"}}}
        ]},
        {relx, [
            {release, {mg, "0.1.0"}, [
                iosetopts,
                % tools for introspection
                {recon, load},
                % debugger
                {runtime_tools, load},
                % profiler
                {tools, load},
                % log formatter
                {logger_logstash_formatter, load},
                % main app
                {mg, permanent}
            ]},
            {mode, minimal},
            {extended_start_script, true},
            {overlay, [
                {template, "rel_scripts/entrypoint.sh", "bin/entrypoint.sh"},
                {copy, "rel_scripts/configurator.escript", "bin/configurator.escript"},
                {copy, "config/config.yaml", "etc/config.yaml"},
                {copy, "config/cookie", "etc/cookie"}
            ]}
        ]}
    ]},
    {test, [
        {deps, [{proper, "1.4.0"}, {meck, "0.9.2"}]},
        {cover_enabled, true},
        {cover_excl_apps, [mg_cth]},
        {dialyzer, [{plt_extra_apps, [eunit, common_test, proper]}]}
    ]}
]}.

%% Dialyzer static analyzing
{dialyzer, [
    {warnings, [
        % mandatory
        unmatched_returns,
        error_handling,
        unknown
    ]},
    {plt_apps, all_deps}
]}.

%% Helpful plugins.
{project_plugins, [
    {covertool, "2.0.4"},
    {erlfmt, "1.0.0"},
    {rebar3_lint, "1.0.1"}
]}.

{covertool, [
    {coverdata_files, [
        "eunit.coverdata",
        "ct.coverdata"
    ]}
]}.

{erlfmt, [
    write,
    {print_width, 120},
    {files, [
        "apps/*/{src,include,test}/*.{hrl,erl,escript}",
        "apps/*/rebar.config",
        "rel_scripts/*.escript",
        "elvis.config",
        "rebar.config"
    ]}
]}.

%% Linter config.
{elvis_output_format, colors}.

%% NOTE
%% It is needed to use rebar3 lint plugin
{overrides, [
    {del, accept, [{plugins, [{rebar3_archive_plugin, "0.0.2"}]}]},
    {del, prometheus_cowboy, [{plugins, [{rebar3_archive_plugin, "0.0.1"}]}]},
    {del, prometheus_httpd, [{plugins, [{rebar3_archive_plugin, "0.0.1"}]}]}
]}.
